{{!-- {{#if isFullList}} --}}
  <h4>Featuring:  {{#if isFullList}}<a class='get-more' {{action 'getFullList' concertId}}>See Less</a>{{/if}}</h4>
{{!-- {{else}} --}}
  {{!-- <h4>Featuring: </h4> --}}
{{!-- {{/if}} --}}

{{#if isFullList}}

<div class='artist-grid-wrapper'>
  <ui class='row-fluid artist-grid block-grid-3'>
  {{#each performance as |performance|}}
    <li>{{performance.artist.displayName}}</li>
  {{/each}}
  </ui>
</div>

{{else}}

  {{#each performance as |performance index|}}
      {{#if (lt index 9)}}
        <h4 class='artist-list'>{{performance.artist.displayName}}, </h4>
      {{else if (eq index 9)}}
          {{!-- <h4 class='artist-list'>{{performance.artist.displayName}}, <a class='get-more' href='#full-list'>see all...</a></h4> --}}
        <h4 class='artist-list'>{{performance.artist.displayName}}, <a class='get-more' {{action 'getFullList' concertId}}>and more...</a></h4>
      {{/if}}

  {{/each}}

{{/if}}
