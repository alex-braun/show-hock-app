<div class='artist-event-listing'>
{{!--FOR FESTIVALS--}}
{{#if (eq model.type 'Festival')}}
    <div class='artist-concert festival'>
      <div class='concert-image-wrapper'>
        <img src={{model.imageUrl}}>
      </div>
      <h2><strong>{{no-parens model.displayName}}</strong></h2>

    {{artist-date event=model}}

    {{concert-featuring-artist isFullList=isFullList
                                getFullList='getFullList'
                                performances=model.performance
                                concertId=model.id
                                goToArtist='goToArtist'}}
  </div>

{{else}}
  <div class='artist-concert concert'>
    <h3><strong>{{no-parens model.displayName}}</strong></h3>

    {{artist-date event=model}}
    {{purchase-tickets event=model}}

    {{tracking-buttons-concert model=model
                               trackEvent='trackEvent'
                               unTrackEvent='unTrackEvent'
                               userPicked=userPicked}}
    {{!-- {{#if userPicked}}
    {{button-untrack-event value=model
                         buttonTitle='Tracked!!'
                         buttonClick='unTrackEvent'}}
    {{else}}
    {{button-track-event value=model
                         buttonTitle='Track Event'
                         buttonClick='trackEvent'}}
    {{/if}} --}}

    {{concert-featuring-artist isFullList=isFullList
                                getFullList='getFullList'
                                performances=model.performance
                                concertId=model.id
                                goToArtist='goToArtist'}}
    </div>
{{/if}}
  {{!-- VENUE DETAILS--}}
  {{concert-venue-details model=model
                          goToVenue='goToVenue'}}

  {{#if (gt model.calendar.event.length 1)}}
    {{upcoming-venue-events calendar=model.calendar
                          concertId=model.id
                          venue=model.venue.displayName
                          venueId=model.venue.id
                          goToVenue='goToVenue'}}
  {{/if}}

</div>
