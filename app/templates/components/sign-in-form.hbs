{{email-input email=credentials.email}}
{{password-input password=credentials.password}}

<div class='authentication-buttons'>
  <button type="submit" class="btn btn-primary" {{action "submit"}}>
    Sign In
  </button>

  <button class="btn btn-default" {{action "reset"}}>
    Cancel
  </button>
</div>

<div class='change-password-wrapper'>
{{#link-to 'change-password' class='change-password-link'}}
  <h5>Click here to change your password</h5>
{{/link-to}}
</div>
