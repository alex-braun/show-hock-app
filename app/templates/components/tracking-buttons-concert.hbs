{{#if isAuthenticated}}
  {{#liquid-if userPicked class='tracking-button-switch'}}

  {{button-untrack-event value=model
                       buttonTitle='Tracked!!'
                       buttonClick='unTrackEvent'}}
  {{else}}
  {{button-track-event value=model
                       buttonTitle='Track Event'
                       buttonClick='trackEvent'}}
  {{/liquid-if}}
{{else}}
  {{button-track-event value=model.id
                     buttonTitle='Track Event'
                     buttonClick='goToAuthenticate'}}
{{/if}}
